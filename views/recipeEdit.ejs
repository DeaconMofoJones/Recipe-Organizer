<% include partials/header.ejs %>


<form method="POST" action="/recipes/<%= recipe._id %>?_method=PUT">

	    	<div class="form-group">
	    		<label for="nameInput">Name</label>
				<input class="form-control" type="text" id="nameInput" name="recipe[name]" required="true" value="<%= recipe.name %>">
	    	</div>
	      	

	    	<div class="form-group">
	    		<label for="imageInput">Image</label>
				<input class="form-control" type="text" name="recipe[image]" required="true" value="<%= recipe.image %>" id="imageInput">
	    	</div>
	      	

	    	<div class="form-group">
	    		<label for="mealTypeInput">Meal Type</label>
				<input class="form-control" type="text" id="mealTypeInput" name="recipe[mealType]" required="true" value="<%= recipe.mealType %>">
	    	</div>
	      	

	    	<div class="form-group">
	    		<label for="proteinInput">Protein</label>
				<input class="form-control" type="text" id="proteinInput" name="recipe[protein]" required="true" value="<%= recipe.protein %>">
	    	</div>
	      	

	    	<div class="form-group">
	    		<label for="caloriesInput">Calories</label>
				<input class="form-control" type="number" id="caloriesInput" name="recipe[calories]" required="true" value="<%= recipe.calories %>">
	    	</div>
	      	

	    	<div class="form-group">
	    		<label for="cookTimeInMinutesInput">Cook Time In Minutes</label>
				<input class="form-control" id="cookTimeInMinutesInput" type="number" name="recipe[cookTimeInMinutes]" required="true" value="<%= recipe.cookTimeInMinutes %>">
	    	</div>

	    	<div class="form-group">
	    		<label for="servingSizeInput">Serving Size</label>
				<input class="form-control" type="number" id="servingSizeInput" name="recipe[servingSize]" required="true" value="<%= recipe.servingSize %>">
	    	</div>
	      	

	    	<div class="form-group">
		      	<label for="ingredientsInput">Ingredients</label>
				<input class="form-control" id="ingredientsInput" type="text" name="recipe[ingredients]" required="true" value="<%= recipe.ingredients %>">
	    	</div>

	    	<div class="form-group">
	    		<label for="directionsInput">Directions</label>
				<input class="form-control" type="text" id="directionsInput" name="recipe[directions]" required="true" value="<%= recipe.directions %>">
	    	</div>
	      	

	    	<div class="form-group">
	    		<button>Submit</button>
	    	</div>
	      	
	    </div>
</form>

<% include partials/footer.ejs %>