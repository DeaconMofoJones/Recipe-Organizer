<% include partials/header.ejs %>

<div class="jumbotron">
	<h1>Hello</h1>
</div>

	<a href="/recipes/new">new</a>

<div class="container-fluid section">
	<% for (var i = 0; i < recipes.length; i++) { %>
		<div class="">
			<h1><a href="/recipes/<%= recipes[i]._id %>"><%= recipes[i].name %></a></h1>
		</div>
	<% } %>
</div>
<div class="container-fluid section section-thumbnail">
	<div class="row" >
		<% for (var i = 0; i < recipes.length; i++) { %>
			<a href="/recipes/<%= recipes[i]._id %>" class="col-3 thumbnail" image="URL(<%= recipes[i].image %>)">
				
					<h1><%= recipes[i].name %></h1>
				
			</a>
		<% } %>
	</div>
</div>

<img src="https://images.unsplash.com/photo-1426869981800-95ebf51ce900?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80">


<script type="text/javascript">
	
	var allThumbnails = $(".thumbnail").toArray();

	var width = $(".thumbnail").width();
	$(".thumbnail").css({"height":width+"px"});

	allThumbnails.forEach(function(tn) {
	  var image = $(tn).attr("image");
	  $(tn).css({"background-image": image});
	});

</script>


